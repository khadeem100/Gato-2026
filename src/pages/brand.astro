---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import ProboLogo from "../assets/probo-logo.svg";
import ProboLogoOnly from "../assets/probo-logo-only.svg";
import { getTranslator } from "../lib/i18n.ts";
import { frameworks } from "../content/frameworks.ts";
import FrameworkBadge from "../components/FrameworkBadge.svelte";

const __ = await getTranslator(Astro.currentLocale)
---

<Layout
  title={__("Brand Assets")}
  description={__("Download Probo's official logos, badges, and brand assets for your projects and presentations.")}
>
  <main class="container max-w-[920px] py-10 sm:py-20">
    <h1 class="text-h2 mb-3 font-medium animate-slide-in">
      {__("Brand Assets")}
    </h1>
    <p class="text-muted-foreground mb-10 sm:mb-20 animate-slide-in animation-delay-100">
      {__("Official logos, badges, and brand assets for Probo. Feel free to use these in your projects, presentations, or when mentioning Probo.")}
    </p>

    <div class="space-y-16">
      <!-- Logos Section -->
      <section class="animate-slide-in animation-delay-200">
        <h2 class="text-xl font-medium mb-6">{__("Logo")}</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <!-- Full Logo -->
          <div>
            <div class="bg-level-1 rounded-lg flex items-center justify-center mb-4 h-32">
              <Image
                src={ProboLogo}
                alt="Probo Logo"
                width={146}
                height={40}
                class="w-auto h-10"
              />
            </div>
            <div class="flex justify-center">
              <a
                href="/probo-logo.svg"
                download
                class="text-sm px-4 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors inline-block"
              >
                {__("Download SVG")}
              </a>
            </div>
          </div>

          <!-- Logo Icon -->
          <div>
            <div class="bg-level-1 rounded-lg flex items-center justify-center mb-4 h-32">
              <Image
                src={ProboLogoOnly}
                alt="Probo Logo Icon"
                width={40}
                height={40}
                class="w-auto h-10"
              />
            </div>
            <div class="flex justify-center">
              <a
                href="/probo-logo-only.svg"
                download
                class="text-sm px-4 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors inline-block"
              >
                {__("Download SVG")}
              </a>
            </div>
          </div>
        </div>
      </section>

      <!-- Compliance Badges Section -->
      <section class="animate-slide-in animation-delay-300">
        <h2 class="text-xl font-medium mb-6">{__("Compliance Badges")}</h2>
        <p class="text-muted-foreground text-sm mb-6">
          {__("Official compliance badges for ISO 27001, SOC 2, GDPR, HIPAA, and more.")}
        </p>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6">
          {frameworks.map((framework) => (
            <div>
              <div class="bg-level-1 rounded-lg flex flex-col items-center justify-center mb-4 p-6 h-40">
                <FrameworkBadge
                  name={framework.badge}
                  class="block size-16 mb-3 mix-blend-multiply"
                  client:visible
                />
                <div class="text-sm text-center">{framework.label}</div>
              </div>
              <div class="flex flex-wrap gap-2 justify-center">
                <a
                  href={`/frameworks/${framework.badge}.svg`}
                  download
                  class="text-xs px-3 py-1.5 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors inline-block"
                >
                  SVG
                </a>
                <a
                  href={`/frameworks/${framework.badge}.json`}
                  download
                  class="text-xs px-3 py-1.5 bg-level-1 text-foreground border border-border rounded-md hover:bg-level-2 transition-colors inline-block"
                >
                  JSON
                </a>
              </div>
            </div>
          ))}
        </div>
      </section>
    </div>
  </main>
</Layout>
