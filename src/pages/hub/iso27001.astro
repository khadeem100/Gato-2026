import Layout from "../../layouts/Layout.astro";
import FrameworkBadge from "../../components/FrameworkBadge.svelte";
import { getTranslator } from "../../lib/i18n.ts";
const __ = await getTranslator(Astro.currentLocale);

const tableOfContents = [
  { id: "what-is-iso27001", label: "What is ISO 27001?" },
  { id: "certification-or-report", label: "Is it a Certification or a Report?" },
  { id: "understanding-isms", label: "Understanding the ISMS" },
  { id: "requirements", label: "ISO 27001 Requirements" },
  { id: "technical-vs-governance", label: "Technical Security vs. Governance" },
  { id: "penetration-testing", label: "The Role of Penetration Testing" },
  { id: "certification-process", label: "The Certification Process" },
  { id: "iso-vs-soc2", label: "ISO 27001 vs. SOC 2" },
  { id: "worth-it", label: "Is it Worth it for Startups?" },
  { id: "probo-help", label: "How Probo Simplifies ISO 27001" },
];


