  "@context": "https://schema.org",
  "@type": "Article",
  "headline": "The Complete ISO 27001 FAQ: Everything You Need to Know",
  "description": "If you are targeting international markets or enterprise-level clients, you have likely encountered requests for ISO 27001 certification. This guide provides a clear, practical roadmap.",
  "author": {
    "@type": "Organization",
    "name": "Probo",
    "url": "https://www.getprobo.com"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Probo",
    "url": "https://www.getprobo.com",
    "logo": {
      "@type": "ImageObject",
      "url": "https://www.getprobo.com/probo-logo.svg"
    }
  },
  "datePublished": "2024-01-15",
  "dateModified": new Date().toISOString().split('T')[0],
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "https://www.getprobo.com/hub/iso27001"
  },
  "image": "https://www.getprobo.com/og.png"
};

