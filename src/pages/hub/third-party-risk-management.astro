import { getTranslator } from "../../lib/i18n.ts";
const __ = await getTranslator(Astro.currentLocale);

const tableOfContents = [
  { id: "intro", label: "What Is TPRM?" },
  { id: "why-tprm", label: "Why Third-Party Risk Is Growing" },
  { id: "lifecycle", label: "The TPRM Lifecycle" },
  { id: "best-practices", label: "TPRM Best Practices" },
  { id: "probo-support", label: "How Probo Supports TPRM" },
];


const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": "What Is Third-Party Risk Management (TPRM)?",
