    "name": "Probo",
    "url": "https://www.getprobo.com"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Probo",
    "url": "https://www.getprobo.com",
    "logo": {
      "@type": "ImageObject",
      "url": "https://www.getprobo.com/probo-logo.svg"
    }
  },
  "datePublished": "2025-01-01",
  "dateModified": new Date().toISOString().split('T')[0],
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "https://www.getprobo.com/hub/third-party-risk-management"
  },
  "image": "https://www.getprobo.com/og.png"
};

