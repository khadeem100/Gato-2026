---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import Logo from "../assets/probo-logo-only.svg";
import Button from "../components/ui/Button.svelte";
import Badges from "../components/Badges.svelte";
import { getTranslator, getLink } from "../lib/i18n.ts";

const __ = await getTranslator(Astro.currentLocale);
---

<Layout
  title={__("Pricing")}
  description={__("Compliance done properly. Priced accordingly. Starting at $8,000 for a 12-month service including hands-on Probo service to reach certification.")}
>
  <main>
    <!-- Hero Section -->
    <animated-hero class="block py-16 sm:py-24 relative overflow-hidden">
      <div class="container text-center">
        <h1 class="text-h2 sm:text-h1 mb-4 font-medium animate-slide-in">
          {__("Compliance,")}<br />
          {__("Done For You.")}
        </h1>
        <p class="text-muted-foreground mb-3 text-lg animate-slide-in animation-delay-100">
          {__("Compliance isn't a one-size-fits-all product.")}
        </p>
        <p class="text-muted-foreground max-w-[640px] mx-auto text-lg animate-slide-in animation-delay-150">
          {__("The workload required to achieve SOC 2, ISO 27001 or other framework depends on your company's size, setup, and maturity, and so does the price.")}
        </p>

        <!-- Pricing Card -->
        <div class="mt-12 sm:mt-16 max-w-[580px] mx-auto animate-slide-in animation-delay-200">
          <div class="bg-white rounded-2xl border border-border-mid p-6 sm:p-8 text-left shadow-mid">
            <p class="font-medium mb-2">{__("Probo service")}</p>
            <h2 class="mb-3 flex items-baseline gap-2">
              <span class="text-lg font-medium">{__("Starting at")}</span>
              <span class="text-[2rem] sm:text-[2.5rem] font-medium leading-[1.1] tracking-tight">$8,000</span>
            </h2>
            <div class="flex items-center gap-4 mb-5">
              <span class="text-muted-foreground">{__("For a small startup")}</span>
              <span class="bg-[#E4F7C7] text-foreground text-sm px-4 py-1.5 rounded-full font-medium">
                {__("12-month service")}
              </span>
            </div>
            <hr class="mb-5" />
            <p class="text-muted-foreground mb-5">
              {__("Includes hands-on Probo service to reach certification (SOC 2, ISO 27001...) and maintain ongoing compliance.")}
            </p>
            <Button
              href={getLink(Astro, "/contact")}
              size="lg"
              class="w-full"
            >
              {__("Get my pricing")}
            </Button>
          </div>
        </div>
      </div>
    </animated-hero>

    <!-- What's included Section -->
    <section class="container py-16 sm:py-24">
      <h2 class="text-h3 sm:text-h2 mb-3 font-medium text-center">
        {__("What's included")}
      </h2>
      <p class="text-muted-foreground text-lg max-w-[600px] mx-auto text-center mb-12">
        {__("Probo is a hands-on service combined with a powerful platform. You get expert guidance and practical tools to achieve compliance efficiently.")}
      </p>

      <div class="grid sm:grid-cols-2 gap-8 sm:gap-x-16 sm:gap-y-10">
        <!-- Feature 1 -->
        <div class="flex gap-4">
          <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-[#F4F8EC] flex items-center justify-center">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
            </svg>
          </div>
          <div>
            <h3 class="font-medium mb-1">{__("Dedicated Compliance Expert")}</h3>
            <p class="text-muted-foreground">{__("Direct access to compliance experts whenever you need guidance")}</p>
          </div>
        </div>

        <!-- Feature 2 -->
        <div class="flex gap-4">
          <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-[#F4F8EC] flex items-center justify-center">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
          </div>
          <div>
            <h3 class="font-medium mb-1">{__("Onboarding meeting")}</h3>
            <p class="text-muted-foreground">{__("An onboarding meeting with your dedicated expert to get all your context and tech stack")}</p>
          </div>
        </div>

        <!-- Feature 3 -->
        <div class="flex gap-4">
          <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-[#F4F8EC] flex items-center justify-center">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14 2 14 8 20 8"></polyline>
              <line x1="16" y1="13" x2="8" y2="13"></line>
              <line x1="16" y1="17" x2="8" y2="17"></line>
              <polyline points="10 9 9 9 8 9"></polyline>
            </svg>
          </div>
          <div>
            <h3 class="font-medium mb-1">{__("Policies & risk assessment")}</h3>
            <p class="text-muted-foreground">{__("Probo does all necessary documentation templates and risk analysis")}</p>
          </div>
        </div>

        <!-- Feature 4 -->
        <div class="flex gap-4">
          <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-[#F4F8EC] flex items-center justify-center">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
          </div>
          <div>
            <h3 class="font-medium mb-1">{__("Audit prep & auditor selection")}</h3>
            <p class="text-muted-foreground">{__("We find you the right auditor and prepare you for the audit")}</p>
          </div>
        </div>

        <!-- Feature 5 -->
        <div class="flex gap-4">
          <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-[#F4F8EC] flex items-center justify-center">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
              <polyline points="22 4 12 14.01 9 11.01"></polyline>
            </svg>
          </div>
          <div>
            <h3 class="font-medium mb-1">{__("Quarterly follow-ups after certification")}</h3>
            <p class="text-muted-foreground">{__("Ongoing support to maintain your compliance posture")}</p>
          </div>
        </div>

        <!-- Feature 6 -->
        <div class="flex gap-4">
          <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-[#F4F8EC] flex items-center justify-center">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="3" y1="9" x2="21" y2="9"></line>
              <line x1="9" y1="21" x2="9" y2="9"></line>
            </svg>
          </div>
          <div>
            <h3 class="font-medium mb-1">{__("Access to Probo compliance platform")}</h3>
            <p class="text-muted-foreground">{__("Centralized workspace to manage all compliance activities")}</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Platform Advantages Card -->
    <section class="bg-[#F4F8EC] py-10 sm:py-16">
      <div class="container">
        <div class="bg-level-1 rounded-2xl border border-foreground p-6 sm:p-8 max-w-[900px] mx-auto text-center">
          <h3 class="text-h4 font-medium mb-6">{__("Advantage of Probo compliance platform")}</h3>
          <div class="flex flex-col sm:flex-row sm:items-center justify-center gap-6 sm:gap-16">
            <div class="flex items-center justify-center gap-2">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="16 18 22 12 16 6"></polyline>
                <polyline points="8 6 2 12 8 18"></polyline>
              </svg>
              <span class="font-medium">{__("Open-source")}</span>
            </div>
            <div class="flex items-center justify-center gap-2">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
              </svg>
              <span class="font-medium">{__("No vendor lock-in")}</span>
            </div>
            <div class="flex items-center justify-center gap-2">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="4" y1="21" x2="4" y2="14"></line>
                <line x1="4" y1="10" x2="4" y2="3"></line>
                <line x1="12" y1="21" x2="12" y2="12"></line>
                <line x1="12" y1="8" x2="12" y2="3"></line>
                <line x1="20" y1="21" x2="20" y2="16"></line>
                <line x1="20" y1="12" x2="20" y2="3"></line>
                <line x1="1" y1="14" x2="7" y2="14"></line>
                <line x1="9" y1="8" x2="15" y2="8"></line>
                <line x1="17" y1="16" x2="23" y2="16"></line>
              </svg>
              <span class="font-medium">{__("Your data, your control")}</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Trust & independence Section -->
    <section class="container py-16 sm:py-24">
      <h2 class="text-h3 sm:text-h2 mb-10 sm:mb-14 font-medium text-center">
        {__("Trust & independence")}
      </h2>

      <div class="grid sm:grid-cols-3 gap-10 sm:gap-8">
        <!-- Trust 1 -->
        <div>
          <div class="w-10 h-10 rounded-lg bg-[#F4F8EC] flex items-center justify-center mb-4">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
              <polyline points="22 4 12 14.01 9 11.01"></polyline>
            </svg>
          </div>
          <h3 class="font-medium mb-2">{__("Not an audit firm")}</h3>
          <p class="text-muted-foreground">
            {__("Probo helps you prepare for certification but doesn't conduct audits. This keeps our advice objective.")}
          </p>
        </div>

        <!-- Trust 2 -->
        <div>
          <div class="w-10 h-10 rounded-lg bg-[#F4F8EC] flex items-center justify-center mb-4">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
          </div>
          <h3 class="font-medium mb-2">{__("Independent auditors only")}</h3>
          <p class="text-muted-foreground">
            {__("We connect you with accredited, independent audit firms. You choose who audits your systems.")}
          </p>
        </div>

        <!-- Trust 3 -->
        <div>
          <div class="w-10 h-10 rounded-lg bg-[#F4F8EC] flex items-center justify-center mb-4">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
          </div>
          <h3 class="font-medium mb-2">{__("No conflicts of interest")}</h3>
          <p class="text-muted-foreground">
            {__("Our business model aligns with yoursâ€”we succeed when you get certified efficiently and fairly.")}
          </p>
        </div>
      </div>
    </section>

    <!-- Managed frameworks Section -->
    <animated-hero class="block py-16 sm:py-24 relative overflow-hidden">
      <div class="container">
        <Image
          src={Logo}
          alt="Logo probo"
          width={48}
          height={48}
          class="mx-auto mb-6"
        />
        <h2 class="text-h3 sm:text-h2 mb-3 text-center font-medium">
          {__("Managed frameworks")}
        </h2>
        <p class="text-muted-foreground mb-12 text-center text-lg">
          {__("Not seeing the one you are looking for?")}<br />
          {__("Reach out, we likely do it as well.")}
        </p>

        <Badges
          count={10}
          countMobile={9}
          client:visible
          class="mx-auto mb-13 grid max-w-[660px] grid-cols-3 justify-center justify-items-center gap-2 gap-y-10 sm:grid-cols-5 sm:gap-x-10"
        />

        <Button
          rel="nofollow noreferrer"
          href={getLink(Astro, "/contact")}
          size="lg"
          class="mx-auto flex w-max"
        >
          {__("Get compliant")}
        </Button>
      </div>
    </animated-hero>
  </main>
</Layout>

<script>
  import {AnimatedHero} from '../lib/elements/hero'
  import {customElementDefine} from '../lib/dom'

  customElementDefine('animated-hero', () => AnimatedHero)
</script>
