---
import Layout from "../layouts/Layout.astro";
import FrameworkBadge from "../components/FrameworkBadge.svelte";
import { getTranslator } from "../lib/i18n.ts";
const __ = await getTranslator(Astro.currentLocale);

const frameworks = [
  {
    id: "soc2",
    label: "SOC 2",
    title: "What is SOC 2",
    description:
      "This guide breaks down SOC 2 in simple terms: what it is, why it matters, who needs it, and how to prepare without overcomplicating things.",
    features: ["Understanding SOC 2", "Why it is needed", "What solutions exist"],
    href: "/hub/soc2",
    accentColor: "from-emerald-400 to-teal-500",
    badges: ["SOC2_TYPE1", "SOC2_TYPE2"],
  },
  {
    id: "iso27001",
    label: "ISO 27001",
    title: "What is ISO 27001",
    description:
      "This guide explains ISO 27001 in simple terms: what it is, how it works, why companies adopt it, and how to approach certification without adding unnecessary complexity.",
    features: ["Understanding ISO 27001", "Why it is needed", "What solutions exist"],
    href: "/hub/iso27001",
    accentColor: "from-blue-400 to-indigo-500",
    badges: ["ISO27001"],
  },
];

const articles = [
  {
    id: "what-is-compliance-software",
    title: "What is a Compliance Software?",
    description:
      "Discover what defines GRC software in 2026 and why Probo is the platform of choice for companies that want to move fast with qualitative compliance report and process.",
    href: "/hub/what-is-compliance-software",
    accentColor: "from-emerald-400 to-cyan-500",
    tag: "Guide",
  },
  {
    id: "top-grc-tools-2026",
    title: "Top 5 GRC Tools in 2026",
    description:
      "A practical guide for modern Risk & Compliance teams. We compare Probo, Vanta, Drata, Hyperproof, and OneTrust based on risk management, governance, and compliance capabilities.",
    href: "/hub/top-grc-tools-2026",
    accentColor: "from-violet-400 to-purple-500",
    tag: "Comparison",
  },
  {
    id: "third-party-risk-management",
    title: "What Is Third-Party Risk Management (TPRM)?",
    description:
      "Learn what TPRM is, why it matters for compliance frameworks like ISO 27001 and SOC 2, and best practices for managing vendor and supplier risks throughout the relationship lifecycle.",
    href: "/hub/third-party-risk-management",
    accentColor: "from-amber-400 to-orange-500",
    tag: "Guide",
  },
  {
    id: "cloud-security-best-practices",
    title: "Cloud Security Best Practices for Audit-Ready Teams",
    description:
      "Learn cloud security best practices to prevent misconfigurations, cut credential risk, and generate audit-ready evidence for SOC 2 and ISO 27001.",
    href: "/hub/cloud-security-best-practices",
    accentColor: "from-sky-400 to-blue-500",
    tag: "Guide",
  },
];
---

<Layout
  title={__("Hub")}
  description={__("Your central resource for compliance knowledge, guides, and tools.")}
>
  <main class="container my-10 sm:my-20">
    <!-- Hero Section -->
    <div class="text-center mb-10 sm:mb-16">
      <div
        class="inline-flex items-center gap-2 px-4 py-2 rounded-full border border-[rgba(147,201,38,0.12)] bg-white/60 backdrop-blur-[50px] text-xs text-muted-foreground mb-6 animate-slide-in"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="14"
          height="14"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
          <polyline points="9 22 9 12 15 12 15 22"></polyline>
        </svg>
        {__("Resource Center")}
      </div>
      <h1
        class="text-h2 sm:text-h1 mb-6 font-medium animate-slide-in animation-delay-100"
      >
        {__("Hub")}
      </h1>
      <p
        class="text-muted-foreground text-lg sm:text-xl font-medium max-w-[600px] mx-auto animate-slide-in animation-delay-200"
      >
        {__("Your central resource for compliance knowledge, guides, and tools.")}
      </p>
    </div>

    <!-- Compliance Guides Section -->
    <section class="animate-slide-in animation-delay-300">
      <div class="mb-10">
        <h2 class="text-h3 sm:text-[40px] sm:leading-[54px] font-medium mb-3 tracking-[-0.8px]">
          {__("Compliance Guides")}
        </h2>
        <p class="text-muted-foreground text-lg">
          {__("Start your compliance journey with our comprehensive guides")}
        </p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 sm:gap-8">
        {
          frameworks.map((framework) => (
            <article
              class="group relative bg-white rounded-3xl shadow-xl hover:shadow-2xl transition-all duration-300 overflow-hidden border border-gray-200 hover:border-gray-300"
            >
              <!-- Gradient Background Accent -->
              <div class={`absolute top-0 right-0 w-64 h-64 bg-gradient-to-br ${framework.accentColor} opacity-10 blur-3xl transition-opacity group-hover:opacity-20`} />
              
              <div class="relative p-6 sm:p-8">
                <!-- Title -->
                <h3 class="text-[28px] sm:text-[32px] leading-[1.15] font-bold text-gray-900 mb-4 tracking-[-0.5px]">
                  {framework.title}
                </h3>

                <!-- Description -->
                <p class="text-gray-600 mb-8 leading-relaxed">
                  {framework.description}
                </p>

                <!-- Topics List -->
                <ul class="space-y-3 mb-8">
                  {framework.features.map((feature) => (
                    <li class="flex items-start gap-3">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="#10b981"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="shrink-0 mt-0.5"
                      >
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
                        <polyline points="22 4 12 14.01 9 11.01" />
                      </svg>
                      <span class="text-gray-700">
                        {feature}
                      </span>
                    </li>
                  ))}
                </ul>

                <!-- Bottom Section -->
                <div class="flex items-center justify-between pt-6 border-t border-gray-200">
                  <!-- CTA Button -->
                  <a
                    href={framework.href}
                    class="group/btn inline-flex items-center gap-2 bg-gray-900 hover:bg-gray-800 text-white px-6 py-3 rounded-full font-medium transition-all hover:gap-3 shadow-lg hover:shadow-xl"
                  >
                    {__("Access Complete Guide")}
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M5 12h14" />
                      <path d="m12 5 7 7-7 7" />
                    </svg>
                  </a>

                  <!-- Badges -->
                  <div class="flex gap-2">
                    {framework.badges.map((badge) => (
                      <div
                        class="w-12 h-12 rounded-full bg-gray-100 flex items-center justify-center border-2 border-gray-200 group-hover:border-gray-300 transition-colors overflow-hidden"
                      >
                        <FrameworkBadge name={badge} class="size-8" client:visible />
                      </div>
                    ))}
                  </div>
                </div>
              </div>
            </article>
          ))
        }
      </div>
    </section>

    <!-- Articles Section -->
    <section class="mt-10 sm:mt-16 animate-slide-in animation-delay-350">
      <div class="mb-10">
        <h2 class="text-h3 sm:text-[40px] sm:leading-[54px] font-medium mb-3 tracking-[-0.8px]">
          {__("Articles & Comparisons")}
        </h2>
        <p class="text-muted-foreground text-lg">
          {__("In-depth analysis and comparisons to help you make informed decisions")}
        </p>
      </div>

      <div class="grid grid-cols-1 gap-6">
        {
          articles.map((article) => (
            <a
              href={article.href}
              class="group relative bg-white rounded-3xl shadow-xl hover:shadow-2xl transition-all duration-300 overflow-hidden border border-gray-200 hover:border-gray-300 block"
            >
              {/* Gradient Background Accent */}
              <div class={`absolute top-0 right-0 w-64 h-64 bg-gradient-to-br ${article.accentColor} opacity-10 blur-3xl transition-opacity group-hover:opacity-20`} />
              
              <div class="relative p-6 sm:p-8 flex flex-col sm:flex-row sm:items-center gap-6">
                <div class="flex-1">
                  {/* Tag */}
                  <span class="inline-block text-xs font-medium text-[#5d770d] bg-[#f0f7e4] px-3 py-1 rounded-full mb-4">
                    {article.tag}
                  </span>
                  
                  {/* Title */}
                  <h3 class="text-[24px] sm:text-[28px] leading-[1.15] font-bold text-gray-900 mb-3 tracking-[-0.5px] group-hover:text-[#5d770d] transition-colors">
                    {article.title}
                  </h3>

                  {/* Description */}
                  <p class="text-gray-600 leading-relaxed">
                    {article.description}
                  </p>
                </div>

                {/* Arrow */}
                <div class="shrink-0 hidden sm:flex items-center justify-center w-12 h-12 rounded-full bg-gray-100 group-hover:bg-[#D7EDBA] transition-colors">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="text-gray-600 group-hover:text-[#141e12] transition-colors"
                  >
                    <path d="M5 12h14" />
                    <path d="m12 5 7 7-7 7" />
                  </svg>
                </div>
              </div>
            </a>
          ))
        }
      </div>
    </section>

    <!-- Coming Soon Section -->
    <section class="mt-10 sm:mt-16 animate-slide-in animation-delay-400">
      <div
        class="bg-gradient-to-br from-[#e4f7c7] to-[#d0e8b3] rounded-3xl p-8 sm:p-12"
      >
        <div class="flex flex-col gap-6 items-center text-center">
          <div
            class="bg-[#141e12] rounded-2xl size-16 flex items-center justify-center"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="none"
              stroke="#e4f7c7"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path
                d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"
              ></path>
            </svg>
          </div>
          <div class="flex flex-col gap-3">
            <h3
              class="text-h4 sm:text-[32px] sm:leading-[42px] font-medium text-[#141e12] tracking-[-0.8px]"
            >
              {__("More guides coming soon")}
            </h3>
            <p class="text-muted-foreground text-lg max-w-[600px]">
              {
                __(
                  "We're constantly expanding our compliance knowledge center. Stay tuned for guides on GDPR, HIPAA, and more frameworks."
                )
              }
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

