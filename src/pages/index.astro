---
import Layout from "../layouts/Layout.astro";
import YCombinator from "../assets/ycombinator.svg";
import { Image } from "astro:assets";
import Button from "../components/ui/Button.svelte";
import Badges from "../components/Badges.svelte";
import Logos from "../components/block/Logos.astro";
import Testimonials from "../components/block/Testimonials.astro";
import SaleArg from "../components/ui/SaleArg.astro";

import Stories from "../components/block/Stories.astro";
import ComplianceTrack from "../components/block/ComplianceTrack.astro";
import { getTranslator, getLink } from "../lib/i18n.ts";
const __ = await getTranslator(Astro.currentLocale)
---

<Layout
  title={__("Gato-International - Developing, Sourcing & Branding")}
  description={__("Professioneel bedrukken van textiel en promotieartikelen. Zeefdruk, borduren en meer. Milieuvriendelijk en op maat voor uw bedrijf. Bekijk onze catalogus of neem contact op.")}
>
  <animated-hero class="block py-10 pt-26 sm:pt-36 sm:pb-12 relative overflow-hidden px-5 -mt-16">
    <a
      href="https://www.gatosports.com"
      target="_blank"
      rel="noopener noreferrer"
      class="yc-btn text-muted-foreground animate-perspective-in animation-delay-300 mx-auto mb-6 flex w-max items-center gap-2 px-4 py-2 sm:mb-8"
    >
      {__("Bezoek onze webshop")}
      <Image src={YCombinator} alt="Logo YCombinator" width={77} height={15} />
    </a>
    <h1
      class="text-h2 sm:text-h1 mb-6 overflow-hidden text-center font-medium text-balance sm:mb-8"
    >
      <span class="block animate-perspective-in">{__('Developing, Sourcing')}</span>
      <span class="block animate-perspective-in delay-50"
        >
        {__("& Branding")}
      </span
      >
    </h1>
    <p
      class="text-muted-foreground animate-perspective-in animation-delay-150 mx-auto mb-6 max-w-200 text-center text-lg text-balance sm:mb-8"
    >
      {__("Wij bedrukken textiel en promotieartikelen voor uw bedrijf. Van zeefdruk tot borduren - alles milieuvriendelijk en op maat gemaakt. Bekijk onze catalogus of vraag een offerte aan.")}
    </p>
    <div class="mb-11 flex flex-col sm:flex-row items-stretch sm:items-center justify-center gap-3 sm:mb-17">
      <Button
        class="animate-perspective-in animation-delay-200"
        variant="secondary"
        size="lg"
        href="https://catalog.gato-international.com">{__('Bekijk Catalogus')}</Button
      >
      <Button
        class="animate-perspective-in animation-delay-300"
        size="lg"
        rel="nofollow noreferrer"
        href={getLink(Astro, "/contact")}>{__('Neem Contact Op')}</Button
      >
    </div>
    <Badges
      count={10}
      countMobile={6}
      client:load
      border
      class="grid grid-cols-3 sm:grid-cols-5 max-w-[960px] mx-auto"
    />
    <section class="mix-blend-multiply mt-11 sm:mt-17">
      <h2 class="text-tertiary-foreground text-center animate-perspective-in animation-delay-300 ">
        {__("Vertrouwd door toonaangevende bedrijven")}
      </h2>
      <Logos class="animate-slide-in animation-delay-300" constrained/>
    </section>
  </animated-hero>

  <ComplianceTrack />

  <section class="container py-10 sm:py-20">
    <h2 class="text-h3 sm:text-h2 mb-3 text-center font-medium">
      {__("Ons werkproces")}
    </h2>
    <p class="text-muted-foreground mb-10 text-center text-lg sm:mb-12 max-w-180 mx-auto">
      {__("Van ontwerp tot levering - wij zorgen voor een professioneel en milieuvriendelijk bedrukkingsproces. Binnen 2 weken na goedkeuring van uw design leveren wij uw bestelling.")}
    </p>

    <div
      class="flex grid-cols-2 flex-col items-start gap-10 sm:grid sm:gap-x-20 sm:gap-y-12"
    >
      <SaleArg title={__("Stuur uw ontwerp")} video="/videos/keyshot1.mp4">
        <p>
          {__("Mail uw logo of design, bedrijfsnaam, gewenste producten en aantallen naar info@gato-international.com. Wij nemen binnen 24 uur contact met u op.")}
        </p>
      </SaleArg>

      <SaleArg
        title={__("Ontvang uw drukproef")}
        video="/videos/keyshot2.mp4"
      >
        <p>
          {__("Na goedkeuring van uw ontwerp ontvangt u een digitale drukproef. Zo weet u precies hoe het eindresultaat eruit zal zien voordat we beginnen met produceren.")}
        </p>
      </SaleArg>

      <SaleArg
        title={__("Professionele druktechnieken")}
        video="/videos/keyshot3.mp4"
      >
        <p>
          {__("Wij bieden diverse druktechnieken zoals zeefdruk, borduren, DTG en meer. Elke techniek wordt gekozen op basis van uw product en wensen voor het beste resultaat.")}
        </p>
      </SaleArg>

      <SaleArg title={__("Snelle levering")}
               video="/videos/keyshot4.mp4"
      >
        <p>
          {__("Binnen 2 weken na goedkeuring van uw drukproef leveren wij uw bestelling. Al onze producten en processen zijn milieuvriendelijk.")}
        </p>
      </SaleArg>
    </div>
  </section>

  <Testimonials />

  <!-- <OpenSource /> -->

  <Stories />
</Layout>

<script>
  import {AnimatedHero} from '../lib/elements/hero'
  import {customElementDefine} from '../lib/dom'

  customElementDefine('animated-hero', () => AnimatedHero)
</script>
