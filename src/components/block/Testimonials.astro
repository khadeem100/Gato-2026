---
import AlexandrosZisimidis from "../../assets/testimonial/alexandros-zisimidis.jpg";
import GuillaumeMarquis from "../../assets/testimonial/guillaume-marquis.png";
import MaximeMouchet from "../../assets/testimonial/maxime-mouchet.jpg";
import Scroll from "./TestimonialsScroll.svelte";
import Testimonial from "../ui/Testimonial.astro";
import LalitKundu from "../../assets/testimonial/lalit-kundu.jpg";
import DimitriKassubeck from "../../assets/testimonial/dimitri-kassubeck.jpg";
import SonyaRikhtverchik from "../../assets/testimonial/sonya-rikhtverchik.jpg";
import FabienDevos from "../../assets/testimonial/fabien-devos.jpg";
import EfimMirochnik from "../../assets/testimonial/efim-mirochnik.jpg";
import BaptisteArnaud from "../../assets/testimonial/baptiste-arnaud.jpg";
import GavinBains from "../../assets/testimonial/gavin-bains.jpg";
import ChristopherPrice from "../../assets/testimonial/christopher-price.jpg";
import JoshParolin from "../../assets/testimonial/josh-parolin.jpg";
import JeremieParker from "../../assets/testimonial/jeremie-parker.jpg";
import PierreDePoulpiquet from "../../assets/testimonial/pierre-de-poulpiquet.jpg";
import { getTranslator } from "../../lib/i18n.ts";

const __ = await getTranslator(Astro.currentLocale);
---

<section
  class="bg-linear-to-b from-[#F8FAF4] from-[0%] to-white to-[100%] py-10 sm:py-20"
>
  <h2 class="text-h3 sm:text-h2 mb-3 text-center font-medium">
    {__("Wat klanten zeggen")}
  </h2>
  <p class="text-muted-foreground mb-12 text-center text-lg">
    {__("Ervaringen van onze tevreden klanten")}
  </p>
  <Scroll client:load>
    <Testimonial
      image={PierreDePoulpiquet}
      author="Pierre de Poulpiquet"
      role={__("Eigenaar Sportvereniging")}
    >
      {__("Gato-International heeft fantastisch werk geleverd voor onze sportvereniging. De kwaliteit van het borduurwerk op onze teamkleding is uitstekend en de levertijd was precies zoals beloofd.")}
    </Testimonial>
    <Testimonial
      image={JeremieParker}
      author="Jérémie Parker"
      role={__("Marketing Manager")}
    >
      {__("De zeefdruk op onze promotieartikelen ziet er geweldig uit. Het team denkt actief mee over de beste druktechniek voor elk product. Zeer professionele service.")}
    </Testimonial>
    <Testimonial
      image={JoshParolin}
      author="Josh Parolin"
      role={__("Directeur Bouwbedrijf")}
    >
      {__("Wij bestellen al jaren onze bedrijfskleding bij Gato-International. De kwaliteit is consistent hoog en de prijzen zijn zeer concurrerend. Het feit dat alles milieuvriendelijk wordt geproduceerd is voor ons een grote plus.")}
    </Testimonial>
    <Testimonial
      image={ChristopherPrice}
      author="Christopher Price"
      role={__("Eventmanager")}
    >
      {__("Voor ons evenement hadden we op korte termijn 500 bedrukte T-shirts nodig. Gato-International heeft dit fantastisch opgelost. Snelle communicatie, perfecte kwaliteit en op tijd geleverd.")}
    </Testimonial>
    <Testimonial
      image={GavinBains}
      author="Gavin Bains"
      role={__("HR Manager")}
    >
      {__("De onboarding van nieuwe medewerkers is nu compleet met gepersonaliseerde bedrijfskleding van Gato. Het bestelproces via de catalogus is heel eenvoudig en de kwaliteit is top.")}
    </Testimonial>
    <Testimonial
      image={BaptisteArnaud}
      author="Baptiste Arnaud"
      role={__("Verenigingsvoorzitter")}
    >
      {__("Onze voetbalclub bestelt al jaren bij Gato-International. Van trainingspakken tot wedstrijdshirts - alles wordt met zorg geborduurd en de kleuren blijven mooi na vele wasbeurten.")}
    </Testimonial>
    <Testimonial
      image={EfimMirochnik}
      author="Efim Mirochnik"
      role={__("Inkoper Retail")}
    >
      {__("Gato-International is een betrouwbare partner voor onze merchandise. De flexibiliteit in druktechnieken en de snelle levertijden maken hen onmisbaar voor ons bedrijf.")}
    </Testimonial>
    <Testimonial
      image={FabienDevos}
      author="Fabien Devos"
      role={__("Eigenaar Horecabedrijf")}
    >
      {__("De geborduurde polo's voor ons personeel zien er prachtig uit. Gato dacht mee over de beste plaatsing van ons logo en het resultaat is precies wat we zochten.")}
    </Testimonial>
    <Testimonial
      image={SonyaRikhtverchik}
      author="Sonya Rikhtverchik"
      role={__("Sportcoach")}
    >
      {__("De sportkleding van GatoSports is van uitstekende kwaliteit. Comfortabel tijdens het hardlopen en de prints blijven mooi, ook na intensief gebruik.")}
    </Testimonial>
    <Testimonial
      image={DimitriKassubeck}
      author="Dimitri Kassubeck"
      role={__("Facility Manager")}
    >
      {__("Professionele service van begin tot eind. De drukproef gaf ons precies het vertrouwen dat we nodig hadden voordat de grote bestelling in productie ging.")}
    </Testimonial>
    <Testimonial
      image={LalitKundu}
      author="Lalit Kundu"
      role={__("Directeur Zorginstelling")}
    >
      {__("Voor onze zorginstelling was het belangrijk dat de kleding comfortabel en professioneel is. Gato-International leverde precies wat we nodig hadden, inclusief persoonlijke naamborduring.")}
    </Testimonial>
    <Testimonial
      image={MaximeMouchet}
      author="Maxime Mouchet"
      role={__("Marketing Directeur")}
    >
      {__("De kwaliteit van de sublimatie prints op onze promotiekleding overtrof onze verwachtingen. Levendige kleuren die niet vervagen. Zeer aan te bevelen!")}
    </Testimonial>
    <Testimonial
      image={GuillaumeMarquis}
      author="Guillaume Marquis"
      role={__("Operationeel Manager")}
    >
      {__("Gato-International begrijpt wat bedrijven nodig hebben. Snelle offertes, duidelijke communicatie en altijd betrouwbare levering. Een partner waar je op kunt bouwen.")}
    </Testimonial>
    <Testimonial
      image={AlexandrosZisimidis}
      author="Alexandros Zisimidis"
      role={__("Algemeen Directeur")}
    >
      {__("Wat ons het meest aanspreekt bij Gato-International is hun focus op duurzaamheid. Alle producten worden milieuvriendelijk geproduceerd zonder concessies te doen aan kwaliteit. Dat past perfect bij onze bedrijfswaarden.")}
    </Testimonial>
  </Scroll>
</section>
