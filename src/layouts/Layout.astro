---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import PostHog from "../components/posthog.astro";
import { getCanonicalUrl } from "../lib/i18n.ts";

const { title, description, ogImage } = Astro.props;
interface Props {
  noFrameworks?: boolean;
  title: string;
  description?: string;
  ogImage?: string;
}
const seoTitle = title
  ? `${title} | Gato-International B.V.`
  : "Bedrukking & Branding Partner | Gato-International B.V.";
const canonical = getCanonicalUrl(Astro.url);
---

<!doctype html>
<html lang={Astro.currentLocale || "en"}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{seoTitle}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Geist:wght@100..900&display=swap"
      rel="stylesheet"
    />

    <ClientRouter />

    <link rel="sitemap" href="/sitemap-index.xml" />

    <meta name="description" content={description} />
    <link rel="author" href="https://linkedin.com/in/antoinebouchardy" />
    <meta name="author" content="Antoine Bouchardy" />
    <link rel="author" href="https://linkedin.com/in/gearnode" />
    <meta name="author" content="Bryan Frimin" />
    <meta
      name="keywords"
      content="bedrukking,zeefdruk,borduren,DTG print,flex print,sublimatie,bedrijfskleding,sportkleding,GatoSports,promotieartikelen,textieldruk,branding,Nederland"
    />
    <meta name="creator" content="Gato-International B.V." />
    <meta name="robots" content="index, follow" />
    <meta
      name="googlebot"
      content="index, follow, max-video-preview:-1, max-image-preview:large, max-snippet:-1"
    />
    <link rel="canonical" href={canonical} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={seoTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={ogImage ? `https://www.gato-international.com${ogImage}` : "https://www.gato-international.com/og.png"} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@gatointernational" />
    <meta name="twitter:creator" content="@gatointernational" />
    <meta name="twitter:title" content={seoTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage ? `https://www.gato-international.com${ogImage}` : "https://www.gato-international.com/og.png"} />

    <!-- JSON-LD Organization Schema -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Gato-International B.V.",
      "url": "https://www.gato-international.com",
      "logo": "https://www.gato-international.com/gato-logo.svg",
      "description": "Professionele bedrukking en branding diensten. Zeefdruk, borduren, DTG print en meer. Ook eigen sportmerk GatoSports voor hardlopers en outdoor enthousiastelingen.",
      "foundingDate": "2015",
      "sameAs": [
        "https://www.gatosports.com",
        "https://catalog.gato-international.com"
      ],
      "contactPoint": {
        "@type": "ContactPoint",
        "contactType": "sales",
        "email": "info@gato-international.com",
        "url": "https://www.gato-international.com"
      }
    })} />

    <PostHog />
  </head>
  <body class="text-primary bg-level-0 font-sans text-base">
    <Header />
    <slot />
    <Footer noFrameworks={Astro.props.noFrameworks} />
  </body>
</html>

<script>
  import { langs } from "../config.ts";
  import { trim } from "../lib/string.ts";
  function redirectLang() {
    const lang = localStorage.getItem("lang");
    // The check was already done in the past, do nothing
    if (lang !== null) {
      return;
    }

    for (const lang of langs) {
      if (!navigator.language.includes(lang)) {
        continue;
      }

      // User is already on a translated content, do nothing
      if (window.location.href.includes(`/${lang}`)) {
        localStorage.setItem("lang", lang);
        continue;
      }

      // Redirect to the translated content
      localStorage.setItem("lang", lang);
      window.location.href =
        "/" + trim(`${lang}${window.location.pathname}`, "/");
    }
  }

  redirectLang();
</script>
